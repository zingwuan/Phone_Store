                    function docSoThanhChus($so) {
                        $docSo = new NumberFormatter("vi", NumberFormatter::SPELLOUT);
                        return $docSo->format($so);
                    }
                    function mb_ucfirsts($str) {
                        return mb_strtoupper(mb_substr($str, 0, 1)) . mb_substr($str, 1);
                    }
